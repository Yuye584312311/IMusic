<?xml version="1.0" encoding="utf-8"?>
<com.music.player.lib.view.MusicJukeBoxBackgroundLayout1
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/background_view"
    app:backgroundEnable="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:id="@+id/view_empty"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
        <RelativeLayout
            android:id="@+id/re_item_pager_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:clipChildren="false"
            android:gravity="center">
            <android.support.v4.view.ViewPager
                android:id="@+id/view_item_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v4.view.ViewPager>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="6dp"
            android:paddingRight="6dp">
            <com.android.imusic.music.view.BoldMediumTextView
                android:id="@+id/music_tr_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14dp"
                android:textColor="#FFFFFF"
                android:gravity="center_vertical"
                android:shadowColor="#000000"
                android:shadowRadius="2"
                android:shadowDx="1"
                android:shadowDy="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_margin="10dp"
                android:text="--"/>
            <com.android.imusic.music.view.BoldMediumTextView
                android:id="@+id/view_index_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:padding="10dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textSize="14dp"
                android:textStyle="italic"
                android:paddingRight="2dp"
                android:textColor="#FFFFFF"
                android:shadowColor="#000000"
                android:layout_centerInParent="true"
                android:shadowRadius="1"
                android:shadowDx="1"
                android:shadowDy="1"
                android:text="0/0"/>
        </LinearLayout>
    </LinearLayout>
</com.music.player.lib.view.MusicJukeBoxBackgroundLayout1>